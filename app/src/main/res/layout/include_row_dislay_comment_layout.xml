<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp15"
    android:background="@color/color_background2"
    android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cnts_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_user"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="@dimen/dp1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp20"
            android:background="@drawable/bg_green_oval"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_user"
            app:layout_constraintRight_toRightOf="@id/iv_avatar_user" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:background="@drawable/bg_grey_bttuon_r30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15"
        android:layout_toRightOf="@+id/cnts_avatar"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_user_new_feed"
                android:layout_width="wrap_content"
                android:textColor="@color/color_main"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:text="nnhnhat"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_content_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaat"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_time_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:fontFamily="@font/gilroy_light_italic"
                android:singleLine="true"
                android:text="2 minutes ago"
                android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>