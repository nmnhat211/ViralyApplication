<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_left_menu"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@color/color_main"
        app:civ_border_width="@dimen/dp3"
        app:layout_constraintBottom_toBottomOf="@+id/edt_status_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edt_status_user"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_status_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_background1"
        android:fontFamily="@font/gilroy_medium"
        android:imeOptions="actionDone"
        android:padding="@dimen/dp10"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/dp50"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ln_bottom"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar_left_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ln_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/edt_status_user"
        app:layout_constraintRight_toRightOf="@+id/edt_status_user"
        app:layout_constraintTop_toBottomOf="@+id/edt_status_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_func_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_camera"
                android:backgroundTint="@color/colorGrey" />

            <ImageView
                android:id="@+id/iv_func_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/ic_video"
                android:backgroundTint="@color/colorGrey" />

            <ImageView
                android:id="@+id/iv_func_animations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/ic_animations"
                android:backgroundTint="@color/colorGrey" />

            <ImageView
                android:id="@+id/iv_func_collections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/ic_collections"
                android:backgroundTint="@color/colorGrey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_create_post"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="@dimen/dp10"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_weight="1"
                android:text="@string/post_text"
                android:theme="@style/button_theme_color_main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center_vertical|start"
                android:text="@string/cancel_text"
                android:textColor="@color/colorGrey"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>