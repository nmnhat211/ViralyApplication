<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSimpleText</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorControlNormal">@color/colorSimpleText</item>
        <item name="colorControlActivated">@color/colorLightOrange</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorSimpleText</item>
        <item name="colorControlActivated">@color/colorSimpleText</item>
    </style>
</resources>