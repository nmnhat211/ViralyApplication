<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSimpleText</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--CheckBox theme-->
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorControlNormal">@color/colorSimpleText</item>
        <item name="colorControlActivated">@color/colorLightOrange</item>
    </style>

    <!--    HintStyle TextInput layout -->
    <style name="HintStyle" parent="android:TextAppearance">
        <item name="android:textColorHint">@color/colorSimpleText</item>
    </style>

    <!--EditText theme   -->
    <style name="EditTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>


    <!--Button theme-->
    <style name="AccentButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorLightOrange</item>
        <item name="colorAccent">@color/colorLightOrange</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>
</resources>